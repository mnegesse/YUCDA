<div class="center2">
  <center>
    <h1>Edit student:  <%= @student.first_name %>  <%= @student.last_name %</h1>
    <h1>Age:  <%= @student.age %></h1>

  </center>
  <%= form_tag "/student/" + @student.id.to_s, method: 'put', class: "ui form" do %>
    <div class="field">
      <label>student Name</label>
      <input type="text" name="first_name" value="<%= @student.first_name %>" placeholder="First Name">
      <input type="text" name="last_name" value="<%= @student.last_name %>" placeholder="Last Name">
    </div>
    <div class="field">
      <label>Education </label>
      <input type="text" name="education" value = "<%= @student.education %>"placeholder="Education">
    </div>
    <button class="ui button" type="submit">Submit</button>
  <% end %>
</div>
