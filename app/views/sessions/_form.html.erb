<%= form_for :session, url: session_path,html: {class: 'ui form'} do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <button class="ui button" type="submit">Sign In</button>
  </div>

  <div class="other-links">
    
    <%= link_to t(".forgot_password"), new_password_path, class: "ui button" %>
  </div>
<% end %>
