<div class="center3">
  <center><h1>Cohort Name: <%= @cohort.name %> from  </h1>
  <h1>Year: <%= @cohort.year %></h1>
  <a class = "ui button"  href = "/cohorts/<%= @cohort.id %>/edit">
     <i class = "edit icon"> </i>Edit</a>
  <a class = "ui button" method = "DELETE" href = "/cohort/<%= @cohort.id %>">
     <i class = "delete icon"> </i>Delete</a>
  </center>
    <table class="ui striped table">
      <thead>
        <tr>
          <th>Courses</th>
          <th>Teachers</th>
          <th>Students</th>
        </tr>
      </thead>
      <tbody>
      <% @cohort.courses.each do |course| %>
            <tr>
              <td><%= course.name %>  <a href="/courses/<%= course.id %>" class = "icon"><i class="eye icon"></i>view</a</td>
                <td>
                <% @cohort.teachers.each do |teacher| %>
                  <%= teacher.first_name %>   <%= teacher.last_name %>   <a href="/teacher/<%= teacher.id %>" class = "icon"><i class="eye icon"></i>view</a><br><hr><br>
                <% end %>
                </td>
                <td>
                <% @cohort.students.each do |student| %>
                  <%= student.first_name %>   <%= student.last_name %><a href="/student/<%= student.id %>" class = "icon"><i class="eye icon"></i>view</a><br><hr><br>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
    </table>
</div>
